include head.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title User Profile
        style.
            body {
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
                background-color: #f0f0f0;
            }
            .profile-container {
                background: white;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                text-align: center;
            }
            .profile-container img {
                border-radius: 50%;
                margin-bottom: 20px;
            }
            .profile-container h1 {
                margin: 0;
                font-size: 24px;
            }

            .profile-container button {
                background-color: #333;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .profile-container button:hover {
                background-color: #555;
            }
    body
        .profile-container
            img(src=user.picture alt="User Picture" width="100" height="100")
            h1 Welcome, #{user.firstName} #{user.lastName}!
            p Email: #{user.email}
            a(href="/")
                button Home
